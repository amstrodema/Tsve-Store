@model Store.Model.ViewModel.MainVM
@using Omega_Store.Services;
@inject LoginValidator loginValidator
@{
    ViewData["Title"] = "Stock Manager";
    int count = 0;
}

<!-- Breadcrumb Start -->
<section class="breadcrumb__section breadcrumb__bg">
    <div class="container">
        <div class="row row-cols-1">
            <div class="col">
                <div class="breadcrumb__content text-center">
                    <h1 class="breadcrumb__content--title text-white mb-25">Stocks</h1>
                    <ul class="breadcrumb__content--menu d-flex justify-content-center">
                        <li class="breadcrumb__content--menu__items"><a class="text-white" asp-action="index" asp-controller="home">Home</a></li>
                        <li class="breadcrumb__content--menu__items"><a class="text-white" asp-action="index" asp-controller="manager">Manager</a></li>
                        <li class="breadcrumb__content--menu__items"><span class="text-white">Stocks</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb End -->
<!-- Contact Start -->
<div class="login__section section--padding mb-80">
    <div class="container">
        <div class="login__section--inner">
            <div class="row row-cols-md-2 row-cols-1">
                <div class="col-md-8 order-1 order-md-0 mt-2">
                    <div class="table-responsive p-30">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Stocks)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><a class="text-dark" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag">@item.Title</a></td>
                                        <td>@item.DateCreated.ToString("d")</td>
                                        <td><a asp-action="stock" asp-controller="manager" asp-route-s="modify" asp-route-t="@item.Tag"><i class="fa fa-pencil text-warning"></i></a></td>
                                        <td><a asp-action="delete"><i class="fa fa-trash text-danger"></i></a></td>
                                        @*    <td><a asp-action="delete" onclick="return(confirm('WARNING!!!\Hide this item from showing.\nDo you want to proceed?'))"><i class="fa fa-times text-danger"></i></a></td>
                                    <td><a asp-action="delete" onclick="return(confirm('WARNING!!!\nDelete this item permanently.\nDo you want to proceed?'))"><i class="fa fa-trash text-danger"></i></a></td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4 order-0 order-md-1 mb-5">
                    <div>
                        <h6 class="bold uppercase">Add A New Item</h6>
                        <p>
                            Add a new item to your store.<br />
                            <hr />
                        </p>
                        <a asp-action="stocks" asp-controller="manager" asp-route-s="add" class="btn btn-primary">Add New Item <i class="fa fa-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->