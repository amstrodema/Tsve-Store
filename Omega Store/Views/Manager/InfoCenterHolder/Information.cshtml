@model IEnumerable<Store.Model.Knowledge>
@{
    ViewData["Title"] = "Information Manager";
    var count = 0;
}

<!-- Breadcrumb Start -->
<section class="breadcrumb__section breadcrumb__bg">
    <div class="container">
        <div class="row row-cols-1">
            <div class="col">
                <div class="breadcrumb__content text-center">
                    <h1 class="breadcrumb__content--title text-white mb-25">Information</h1>
                    <ul class="breadcrumb__content--menu d-flex justify-content-center">
                        <li class="breadcrumb__content--menu__items"><a class="text-white" asp-action="index" asp-controller="home">Home</a></li>
                        <li class="breadcrumb__content--menu__items"><a class="text-white" asp-action="index" asp-controller="manager">Manager</a></li>
                        <li class="breadcrumb__content--menu__items"><span class="text-white">Information</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb End -->
<div class="login__section section--padding mb-80">
    <div class="container">
        <div class="login__section--inner">
            <div class="row row-cols-md-2 row-cols-1">
                <div class="col-md-8 order-1 order-md-0 mt-2">
                    <div class="table-responsive p-30">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th style="min-width:25%">Question</th>
                                    <th>Date</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Count() < 1)
                                    {
                                        <tr>
                                         <td colspan="7">
                                         No Information Found
                                         </td>
                                        </tr>
                                    }
                                    foreach (var info in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><a class="text-dark text-nowrap">@info.Question</a></td>
                                        <td>@info.DateCreated.ToString("d")</td>
                                            <td><a asp-action="category" asp-route-s="modify" asp-route-t="@info.Tag"><i class="fa fa-pencil text-warning"></i></a></td>
                                        <td><a asp-action="delete" ><i class="fa fa-trash text-danger"></i></a></td>
                                        @*   <td><a asp-action="delete" onclick="return(confirm('WARNING!!!\nDelete this category but preserve listed items.\nDo you want to proceed?'))"><i class="fa fa-times text-danger"></i></a></td>
                                    <td><a asp-action="delete" onclick="return(confirm('WARNING!!!\nDelete this category and all items listed under it.\nDo you want to proceed?'))"><i class="fa fa-trash text-danger"></i></a></td> *@
                                    </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4 order-0 order-md-1 mb-5">
                    <div>
                        <h6 class="bold uppercase">Add A New Information</h6>
                        <p>
                            Add a knowledge that will help people understand your business better!<br />
                            <hr />
                            <small>e.g. Do you supply raw meat?</small>
                        </p>
                        <a asp-action="information" asp-controller="manager" asp-route-s="add" class="btn btn-primary">Add New Knowledge <i class="fa fa-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

