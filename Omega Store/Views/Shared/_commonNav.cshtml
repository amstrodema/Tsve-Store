                <div class="overflow-hidden vertical-center" style="width: 100px; height: 100px;">
                    <i class="fa fa-shopping-cart icon-2 text-info"></i>
                </div>
                <div class="flex-fill pl-3">
                    <h6>Order Manager</h6>
                  @*   <small class="text-body">100 Orders</small> *@
