 @model IEnumerable<Store.Model.Item>

 @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-6 pb-1">
        <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden beam">
                            <img class="img-fluid w-100" src="@item.Image" alt="">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" onclick="AddToCart('@item.ID','1')"><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" onclick="ToggleFave('@item.ID')"><i class="far fa-heart"></i></a>
                                <a class="btn btn-outline-dark btn-square" onclick="AddToCart('@item.ID','1')" asp-action="cart" asp-controller="shop"><i class="fa fa-shopping-basket"></i></a>
                                <a class="btn btn-outline-dark btn-square" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag"><i class="fa fa-eye"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-info text-truncate" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag">@item.Title</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@item.CurrencySymbol@item.Price</h5> @if (item.OldPrice > 0)
                                {
                                    <h6 class="text-muted ml-2"><del>@item.CurrencySymbol@item.OldPrice</del></h6>
                                }
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if(item.Rating >= i)
                                    {
                                        <small class="fa fa-star text-primary mr-1"></small>
                                    }
                                    else
                                    {
                                        <small class="far fa-star text-primary mr-1"></small>
                                    }
                                }
                              
                                <small>(@item.Reviews)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
