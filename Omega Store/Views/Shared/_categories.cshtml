@model Store.Model.ViewModel.MainVM
<div class="row px-xl-5 pb-3">
    @foreach (var cat in Model.CategoryHybrids)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <a class="text-decoration-none" asp-action="category" asp-controller="shop" asp-route-t="@cat.Tag">
                <div class="cat-item d-flex align-items-center mb-4">
                    <div class="overflow-hidden" style="width: 100px; height: 100px;">
                        <img class="img-fluid" src="@cat.Image" alt="">
                    </div>
                    <div class="flex-fill pl-3">
                        <h6>@cat.Name</h6>
                        <small class="text-body">@cat.ItemsNo Items</small>
                    </div>
                </div>
            </a>
        </div>
    }
</div>