@model Store.Model.Item
<div class="col-md-6">
    <div class="quickview__gallery">
        <div class="product__media--preview  swiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="product__media--preview__items">
                        <a class="product__media--preview__items--link glightbox" data-gallery="product-media-preview" asp-action="item" asp-controller="shop" asp-route-t="@Model.Tag"><img class="product__media--preview__items--img" src="@Model.Image" alt="product-media-img"></a>
                        <div class="product__media--view__icon">
                            <a class="product__media--view__icon--link glightbox" asp-action="item" asp-controller="shop" asp-route-t="@Model.Tag" data-gallery="product-media-preview">
                                <svg class="product__items--action__btn--svg" xmlns="http://www.w3.org/2000/svg" width="22.51" height="22.443" viewBox="0 0 512 512"><path d="M221.09 64a157.09 157.09 0 10157.09 157.09A157.1 157.1 0 00221.09 64z" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="32"></path><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="32" d="M338.29 338.29L448 448"></path></svg>
                                <span class="visually-hidden">product view</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
</div>
<div class="col-md-6">
    <div class="quickview__info">
   
            <h2 class="product__details--info__title mb-15">@Model.Title</h2>
            <div class="product__details--info__price mb-12">
                <span class="current__price">@Model.CurrencySymbol@Model.Price</span>
                @if (Model.OldPrice > 0)
                {
                    <span class="old__price">@Model.CurrencySymbol@Model.OldPrice</span>
                }
            </div>
            <div class="product__items--rating d-flex align-items-center mb-12">
                
                <span class="product__items--rating__count--number">
                
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Model.Rating)
                        {
                            <i class="fa fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="fa fa-star-o"></i>
                        }

                    }
                    (@Model.Reviews)</span>
            </div>
            <p class="product__details--info__desc mb-10">@Model.Brief</p>
            <br />
            <div class="product__variant">
                <div class="quickview__variant--list quantity d-flex align-items-center mb-10">
                    <div class="quantity__box">
                        <button type="button" class="quantity__value quickview__value--quantity decrease" aria-label="quantity value" value="Decrease Value">-</button>
                        <label>
                        <input type="number" id="itemQtyPrep" class="quantity__number quickview__value--number" value="1" data-counter />
                        </label>
                        <button type="button" class="quantity__value quickview__value--quantity increase" aria-label="quantity value" value="Increase Value">+</button>
                    </div>
                <button class="btn quickview__cart--btn" onclick="ProcessItem('@Model.ID','itemQtyPrep')" type="submit">Add To Cart</button>
                </div>
                <div class="quickview__variant--list variant__wishlist mb-10 mt-5">
                <a class="variant__wishlist--icon" asp-action="item" asp-controller="shop" asp-route-t="@Model.Tag" title="See product reviews and more">
                        See product reviews and more &nbsp; &nbsp; <i class="fa fa-long-arrow-right"></i>
                    </a>
                </div>
            </div>
     
    </div>
</div>